    <script type="text/javascript">
        $(document).ready(function (){

            // ==================================================
            // INITIALISATION CALENDRIER DATETIMEPICKER
            // ==================================================
            $('#estimation-form-datetimepicker').datetimepicker({
                locale: 'fr'
            });

            // ==================================================
            // ENVOI FORMULAIRE ESTIMATION
